{
  "name": "Rill Developer",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "postCreateCommand": "curl https://rill.sh | sh -s -- --non-interactive ~/.rill",
  "postStartCommand": "~/.rill start --no-open",
  "forwardPorts": [9009],
  "portsAttributes": {
    "9009": {
      "label": "Rill Developer",
      "onAutoForward": "openBrowser"
    }
  }
}
